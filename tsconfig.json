{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "./global.d.ts"],
    "strict": true,
    "paths": {
      "@screens/*": ["./src/screens/*"],
      "@components/*": ["./src/components/*"],
      "@utils/*": ["./src/utils/*"],
      "@config/*": ["./src/config/*"],
      "@views/*": ["./src/views/*"],
      "@assets/*": ["./assets/*"],
      "@redux/*": ["./src/redux/*"],
      "@navigation/*": ["./src/navigation/*"],
      "@styles/*": ["./src/styles/*"]
    }
  }
}
